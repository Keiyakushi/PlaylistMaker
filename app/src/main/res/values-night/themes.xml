<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.PlaylistMaker" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/icons</item>
        <item name="colorPrimaryVariant">@color/white</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/icons</item>
        <item name="colorSecondaryVariant">@color/white</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="button_clear">@color/icons</item>
        <item name="background_search">@color/white</item>
        <item name="track_text">@color/white</item>
        <item name="nothing_found">@drawable/ic_nothing_search_dark</item>
        <item name="wrong_internet">@drawable/ic_wrong_internet_dark</item>
        <item name="reload_button">@color/white</item>
        <item name="add_playlist">@drawable/ic_bt_add_playlist_dark</item>
        <item name="bt_play">@drawable/ic_bt_play_dark</item>
        <item name="bt_follow">@drawable/ic_bt_follow_dark</item>
        <item name="bt_pause">@drawable/ic_bt_pause_dark</item>
    </style>
</resources>