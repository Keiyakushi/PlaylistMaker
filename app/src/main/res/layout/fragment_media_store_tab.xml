<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="?attr/colorSecondary"
    tools:context="com.practicum.playlistmaker.ui.root.media.MediaFragment">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="12dp"
            android:paddingTop="10dp"
            android:text="@string/media"
            android:textColor="?attr/colorOnSecondary"
            android:textSize="@dimen/medium_text_size"
            android:textStyle="bold"
            android:fontFamily="@font/ys_display_medium"
            android:textFontWeight="500"
            />

    </FrameLayout>

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tabLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/primary_dp"
        android:layout_marginRight="@dimen/primary_dp"
        android:layout_marginTop="@dimen/primary_dp"
        android:background="?attr/colorSecondary"
        app:tabTextColor="?attr/colorOnSecondary"
        app:tabTextAppearance="@style/TabLayout"
        android:textFontWeight="500"
        android:textStyle="bold"
        android:fontFamily="@font/ys_display_medium"
        android:textSize="14sp"
        app:tabIndicatorColor="?attr/colorOnSecondary"/>

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/viewPager"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
</LinearLayout>