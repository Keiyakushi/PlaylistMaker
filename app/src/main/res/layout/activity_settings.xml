<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/back_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/twenty_dp"
            android:paddingTop="@dimen/twenty_dp"
            android:paddingRight="28dp"
            android:scaleType="fitStart"
            android:src="@drawable/ic_back_icon" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="61dp"
            android:paddingTop="14dp"
            android:text="@string/settings"
            android:textColor="@color/black"
            android:textSize="@dimen/medium_text_size"
            android:textStyle="bold" />
    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:paddingStart="@dimen/primary_dp"
            android:paddingTop="64dp"
            android:paddingBottom="@dimen/second_dp"
            android:text="@string/black_theme"
            android:textColor="@color/black"
            android:textSize="@dimen/low_text_size" />

        <Switch
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="end"
            android:gravity="end"
            android:paddingTop="61dp"
            tools:ignore="UseSwitchCompatOrMaterialXml" />
    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableEnd="@drawable/ic_share"
            android:paddingStart="@dimen/primary_dp"
            android:paddingTop="@dimen/second_dp"
            android:paddingRight="@dimen/twenty_dp"
            android:paddingBottom="@dimen/second_dp"
            android:text="@string/share"
            android:textColor="@color/black"
            android:textSize="@dimen/low_text_size" />
    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableEnd="@drawable/ic_support"
            android:paddingStart="@dimen/primary_dp"
            android:paddingTop="@dimen/second_dp"
            android:paddingRight="@dimen/primary_dp"
            android:paddingBottom="@dimen/second_dp"
            android:text="@string/mail_support"
            android:textColor="@color/black"
            android:textSize="@dimen/low_text_size" />
    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableEnd="@drawable/ic_arrow"
            android:paddingStart="@dimen/primary_dp"
            android:paddingTop="@dimen/second_dp"
            android:paddingRight="@dimen/twenty_dp"
            android:paddingBottom="@dimen/second_dp"
            android:text="@string/user_agreement"
            android:textColor="@color/black"
            android:textSize="@dimen/low_text_size" />
    </FrameLayout>
</LinearLayout>
