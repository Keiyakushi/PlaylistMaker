<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="?attr/colorSecondary"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/back_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/twenty_dp"
            android:paddingTop="@dimen/twenty_dp"
            android:paddingRight="28dp"
            android:scaleType="fitStart"
            app:srcCompat ="@drawable/ic_back_icon"
            app:tint = "?attr/colorOnSecondary"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="61dp"
            android:paddingTop="14dp"
            android:text="@string/settings"
            android:textColor="?attr/colorOnSecondary"
            android:textSize="@dimen/medium_text_size"
            android:textStyle="bold"
            android:fontFamily="@font/ys_display_medium"
            android:textFontWeight="500"
            />
    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="@dimen/primary_dp"
            android:paddingTop="64dp"
            android:paddingBottom="@dimen/second_dp"
            android:text="@string/black_theme"
            android:textColor="?attr/colorOnSecondary"
            android:textSize="@dimen/low_text_size"
            android:fontFamily="@font/ys_display_medium"
            android:textFontWeight="500"/>

        <Switch
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="end"
            android:gravity="end"
            android:paddingTop="61dp"
            android:paddingRight="8dp"
            tools:ignore="UseSwitchCompatOrMaterialXml" />
    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/settingsShare">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableEnd="@drawable/ic_share"
            android:drawableTint="?attr/colorSecondaryVariant"
            style="@style/SettingsTextView"
            android:textColor="?attr/colorOnSecondary"
            android:text="@string/share"
             />
    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/settingsSuport">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableEnd="@drawable/ic_support"
            android:drawableTint="?attr/colorSecondaryVariant"
            style="@style/SettingsTextView"
            android:paddingRight="17dp"
            android:textColor="?attr/colorOnSecondary"
            android:text="@string/mail_support"
             />
    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/userAgreement">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableEnd="@drawable/ic_arrow"
            android:drawableTint="?attr/colorSecondaryVariant"
            android:paddingRight="23dp"
            style="@style/SettingsTextView"
            android:textColor="?attr/colorOnSecondary"
            android:text="@string/user_agreement"
            />
    </FrameLayout>
</LinearLayout>
