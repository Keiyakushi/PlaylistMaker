<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:app="http://schemas.android.com/apk/res-auto">

    <style name="MainButton" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:layout_weight">1</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
        <item name="android:scaleType">centerCrop</item>
        <item name="textAllCaps">false</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/medium_text_size</item>
        <item name="cornerRadius">@dimen/primary_dp</item>
        <item name="iconGravity">textStart</item>
        <item name="iconPadding">10dp</item>
        <item name="iconTint">@color/icons</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
    </style>

    <style name="SettingsTextView">
        <item name="android:paddingStart">@dimen/primary_dp</item>
        <item name="android:paddingTop">@dimen/second_dp</item>
        <item name="android:paddingRight">@dimen/twenty_dp</item>
        <item name="android:paddingBottom">@dimen/second_dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/low_text_size</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
    </style>

    <style name="TabLayout" parent="Widget.MaterialComponents.TabLayout">
        <item name="textAllCaps">false</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:background">?attr/colorSecondary</item>
        <item name="tabIndicatorColor">?attr/colorOnSecondary</item>
        <item name="tabTextColor">?attr/colorOnSecondary</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textSize">14sp</item>
    </style>
    <style name="InputTextLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:textColor">?attr/bt_play</item>
        <item name="android:textColorHint">"?attr/bt_play"</item>
        <item name="boxCornerRadiusTopEnd">@dimen/five_dp</item>
        <item name="boxCornerRadiusTopStart">@dimen/five_dp</item>
        <item name="boxCornerRadiusBottomEnd">@dimen/five_dp</item>
        <item name="boxCornerRadiusBottomStart">@dimen/five_dp</item>
        <item name="boxStrokeColor">@color/input_text_layout</item>
        <item name="boxStrokeWidth">1dp</item>
        <item name="boxStrokeWidthFocused">1dp</item>
    </style>
</resources>