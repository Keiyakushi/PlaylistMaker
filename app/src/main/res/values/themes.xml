<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.PlaylistMaker" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/dark_blue</item>
        <item name="colorPrimaryVariant">@color/white</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/white</item>
        <item name="colorSecondaryVariant">@color/icons2</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="button_clear">@color/grey_2</item>
        <item name="background_search">@color/grey</item>
        <item name="track_text">@color/track_text</item>
        <item name="nothing_found">@drawable/ic_nothing_search_light</item>
        <item name="wrong_internet">@drawable/ic_wrong_internet_light</item>
        <item name="reload_button">@color/icons</item>
        <item name="add_playlist">@drawable/ic_bt_add_playlist</item>
        <item name="bt_play">@drawable/ic_bt_play</item>
        <item name="bt_follow">@drawable/ic_bt_follow</item>
    </style>
</resources>